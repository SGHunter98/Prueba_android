<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purpura</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/color_Accent</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.AppCompat.Medium</item>
        <!--        <item name="android:forceDarkAllowed">false</item>-->
    </style>



    <style name="Material.button.player" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="Material.button.Alphabet" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:foregroundTint">@color/white</item>


    </style>

    <style name="Titulo.Letra.Text" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="Titulo2.Letra.Text" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Texto_UI" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">26dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonBorderlessGreen" parent="Button.Primary.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">#009867</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/logo</item>
        <item name="colorControlHighlight">@color/logo</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RaisedButtonDark2" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/btn_limpiar</item>
        <item name="colorControlHighlight">@color/btn_limpiar</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RaisedButtonDark3" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/btn_save</item>
        <item name="colorControlHighlight">@color/btn_save</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



    <style name="EditText" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="TextAppearance.Subhead.Bold" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>


    <style name="Button.Primary.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/logo</item>
    </style>

</resources>